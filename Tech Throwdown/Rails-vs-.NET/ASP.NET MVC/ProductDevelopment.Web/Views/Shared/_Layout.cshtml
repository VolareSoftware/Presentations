@using SquishIt.Framework
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @{
        MvcHtmlString.Create(
            Bundle.Css()
                .Add("~/Content/Site.css")
                .Add("~/Content/themes/base/jquery-ui.css")
                .ForceRelease()
                .Render("~/Content/AllStyles.min.#.css"));
        MvcHtmlString.Create(
            Bundle.JavaScript()
                .Add("~/Scripts/jquery-1.6.2.min.js")
                .Add("~/Scripts/modernizr-2.0.6-development-only.js")
                .ForceRelease()
                .Render("~/Content/AllScripts.min.#.css"));
    }
    @*<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.6.2.min.js")" type="text/javascript"> </script>
        <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"> </script>*@
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>
                    Product Development Issue Tracker</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Defects", "Index", "Defects")</li>
                    @if (ViewBag.User.Admin)
                    {
                        <li>@Html.ActionLink("Admin", "Index", "Users")</li>
                    }
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
